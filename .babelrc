{
  "env": {
    "production": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ],
        "stage-2",
        "react"
      ],
      "plugins": [
        "transform-class-properties"
      ]
    },
    "development": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ],
        "stage-2",
        "react"
      ],
      "plugins": [
        "react-hot-loader/babel",
        "transform-class-properties"
      ]
    },
    "test": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ],
        "stage-2",
        "react"
      ],
      "plugins": [
        "transform-es2015-modules-commonjs",
        "transform-class-properties"
      ]
    }
  }
}
