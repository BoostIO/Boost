{
  "name": "inpad",
  "productName": "Inpad",
  "version": "0.2.0",
  "description": "A Polished Notes App with Github Flavored Markdown",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManoCurry/Inpad.git"
  },
  "scripts": {
    "start": "electron app/index.js",
    "dev": "NODE_ENV=development electron app/index.js",
    "compile": "NODE_ENV=production webpack --config webpack.config.js --progress",
    "analyze": "NODE_ENV=production webpack --config webpack.config.js --json | webpack-bundle-size-analyzer",
    "pack": "env-cmd ./.env build --dir",
    "dist": "env-cmd ./.env build",
    "shasum": "shasum -a 256 dist/mac/Inpad-$npm_package_version.dmg",
    "lint": "standard",
    "webpack": "NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "todo": "fixme -i 'compiled/**' -i 'dist/**' -i 'resources/**' -i 'node_modules/**'",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "markdown",
    "snippet",
    "notes",
    "gfm"
  ],
  "author": "Sarah Seo <sarah.seo.0311@gmail.com>",
  "contributors": [
    {
      "name": "Junyoung Choi",
      "email": "fluke8259@gmail.com",
      "url": "http://rokt33r.github.io/"
    },
    {
      "name": "Jiseung Roh",
      "email": "jiseung.roh@gmail.com",
      "url": "https://rohjs.github.io/portfolio/"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/history": "^4.5.2",
    "@types/react": "^15.0.29",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.43",
    "@types/redux-logger": "^3.0.0",
    "@types/webpack-env": "^1.13.0",
    "babel-core": "^6.18.0",
    "babel-env": "^2.4.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.2.7",
    "babel-runtime": "^6.23.0",
    "css-loader": "^0.26.1",
    "electron": "^1.6.11",
    "electron-builder": "^19.4.2",
    "electron-devtools-installer": "^2.2.0",
    "electron-rebuild": "^1.5.11",
    "env-cmd": "^4.0.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "filenamify": "^1.2.1",
    "fixme": "^0.4.3",
    "history": "^4.6.2",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "pouchdb-adapter-memory": "^6.2.0",
    "pouchdb-browser": "^6.2.0",
    "source-map-loader": "^0.2.1",
    "tslint": "^5.4.3",
    "tslint-language-service": "^0.9.6",
    "typescript": "rc",
    "url-loader": "^0.5.7",
    "webpack": "^2.6.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "codemirror": "^5.26.0",
    "electron-positioner": "^3.0.0",
    "github-markdown-css": "^2.4.1",
    "glamor": "^2.20.25",
    "glamorous": "^3.23.2",
    "katex": "^0.7.1",
    "moment": "^2.18.1",
    "open-color": "^1.5.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.3",
    "remark": "^7.0.1",
    "remark-emoji": "^2.0.0",
    "remark-html": "^6.0.0",
    "remark-lint": "^6.0.0",
    "remark-math": "^1.0.0",
    "remark-slug": "^4.2.2",
    "strip-markdown": "^3.0.0",
    "unist-util-visit": "^1.1.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "envs": [
      "jest"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/specs/utils/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^main(.*)$": "<rootDir>/src/main$1",
      "^lib(.*)$": "<rootDir>/src/lib$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^specs(.*)$": "<rootDir>/specs$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/specs/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/specs/__mocks__/styleMock.js"
    }
  },
  "build": {
    "appId": "com.electron.Inpad",
    "copyright": "Copyright Â© 2016-2017 Sarah Seo",
    "category": "public.app-category.productivity",
    "files": [
      "app",
      "compiled",
      "resources",
      "node_modules"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "resources/icon.icns"
    }
  }
}
